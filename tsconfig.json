{
    "compilerOptions": {
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "es6",
        ],
        "removeComments": true,
        "sourceMap": true,
        // Strict settings
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
    },
    "exclude": [
        "node_modules",
    ]
}