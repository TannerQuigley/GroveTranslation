{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "removeComments": true,
        "sourceMap": true,
        // Strict settings
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
    },
    "exclude": [
        "node_modules",
    ]
}